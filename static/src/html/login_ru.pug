include partials/gc_page_ru
+a_gc_page_ru("../javascripts/login_ru.jsx", "/login_en.pug", "/login_ru.pug")
    div(class="m-4 flex flex-row justify-center")
        div(class="md:py-6 lg:max-w-6xl border-2 p-6 rounded")
            h1(class="text-4xl py-6") Вход на сайт
            div(
                id="g_id_onload",
                data-client_id="523831376166-4cphvm3ftfo9e83co9m3itfms3fsf13h.apps.googleusercontent.com",
                data-context="signin",
                data-ux_mode="popup",
                data-callback="handleCredentialResponse",
                data-auto_prompt="false")
            div(
                class="g_id_signin",
                data-type="standard",
                data-shape="rectangular",
                data-theme="filled_blue",
                data-text="signin_with",
                data-size="large",
                data-logo_alignment="left")
            div(
                id="gc_error",
                class="my-4 text-red-600 w-full text-center hidden"
            )
            form(
                id="gc_name_form",
                class="my-10 flex flex-col w-full invisible"
